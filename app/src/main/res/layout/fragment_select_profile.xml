<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="br.iesb.mobile.netflics.ui.fragment.main.profile.SelectProfileFragment" />

        <variable
            name="viewmodel"
            type="br.iesb.mobile.netflics.viewmodel.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        app:layoutDescription="@xml/fragment_select_profile_scene"
        tools:context="ui.fragment.main.profile.SelectProfileFragment">

        <TextView
            android:id="@+id/tvSelectProfileTitle"
            style="?titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/who_is_watching"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <br.iesb.mobile.netflics.ui.component.AnimatedProfile
            app:profileBorderColor="#6E6E6E"
            app:profileBorderWidth="8"
            app:profileCounter="2"
            app:profileCounterColor="#9E3232"
            app:profileCounterStrokeColor="#F37A7A"
            app:profileCounterStrokeWidth="1.2"
            app:profileCounterTextColor="#ffffff"
            app:profileEndColor="#44090909"
            app:profileCenterColor="#FB2C2C"
            app:profileStartColor="#000000"
            app:profileName="Kenniston"
            app:profileNameColor="#ffffff"
            app:profilePlaceholder="@drawable/kenniston"
            android:tag="Profile1"
            android:onClick="@{ fragment::createOrSelectProfile }"
            android:id="@+id/ivProfile1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" />

        <ImageView
            android:tag="Profile2"
            android:onClick="@{ fragment::createOrSelectProfile }"
            android:id="@+id/ivProfile2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toEndOf="@+id/guideline2"
            app:srcCompat="@drawable/ic_account"
            app:tint="?colorOnPrimary" />

        <ImageView
            android:tag="Profile3"
            android:onClick="@{ fragment::createOrSelectProfile }"
            android:id="@+id/ivProfile3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ic_account"
            app:tint="?colorOnPrimary" />

        <ImageView
            android:tag="Profile4"
            android:onClick="@{ fragment::createOrSelectProfile }"
            android:id="@+id/ivProfile4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:srcCompat="@drawable/ic_account"
            app:tint="?colorOnPrimary" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <br.iesb.mobile.netflics.ui.component.AnimatedProfile
            android:id="@+id/animatedProfile2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:profileBorderColor="#6E6E6E"
            app:profileBorderWidth="8"
            app:profileCounter="2"
            app:profileCounterColor="#9E3232"
            app:profileCounterStrokeColor="#F37A7A"
            app:profileCounterStrokeWidth="1.2"
            app:profileCounterTextColor="#ffffff"
            app:profileEndColor="#44090909"
            app:profileCenterColor="#FB2C2C"
            app:profileStartColor="#000000"
            app:profileName="Kenniston"
            app:profileNameColor="#ffffff"
            app:profilePlaceholder="@drawable/kenniston" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>
